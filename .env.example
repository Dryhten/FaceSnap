# 人脸检测服务配置文件
# 复制此文件为 .env 并修改相应的配置值

# ==================== 数据库配置 ====================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=123456
DB_NAME=personnel_db

# ==================== 服务配置 ====================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# ==================== 模型配置 ====================
FACE_DETECTION_THRESHOLD=0.9
FACE_RECOGNITION_THRESHOLD=0.7
DEVICE=cuda:0

# ==================== 文件上传配置 ====================
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.bmp

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
